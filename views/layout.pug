block variables
doctype html 
html 
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        script(async, defer, src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js")
        script(async, defer, src="/js/main.js")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")
        link(rel="stylesheet", href="/css/style.css")
        title=title ? title : 'Asset Management System' 
    body
        .row.w-100.mx-auto
            nav#sidebar.p-0.col-md-3.col-lg-2.d-md-grid
                include sidebar.pug

            div#main.p-0.col-md-9.col-lg-10
                div.pageTitle.p-3=pageTitle

                if(process && process.type)
                    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css")
                    script(src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js")
                    script.
                        const notification = !{JSON.stringify(process || {})};
                        var notyf = new Notyf();
                        if(notification && notification.type === 'success') notyf.success(notification.message || "Success");
                        if(notification && notification.type === 'fail') notyf.error(notification.message || "Error");

                block content

        
        
        