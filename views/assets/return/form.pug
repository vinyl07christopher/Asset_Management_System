extends ../../layout

block variables 
  //- -var title='title bar'
  -var pageTitle = `Return Asset to Stock`

block content 
    .row.w-100.mx-auto
      .mx-auto.d-table(style='width:100%;max-width:450px;font-size:.8rem').col-lg-6.order-last.order-lg-first.mt-3.mt-lg-0
        table.table.table-striped.table-light.table-bordered
          thead 
            tr 
              th(colspan=2).text-center.bg-dark.text-light Asset Details
          tbody 
            tr 
              td Asset Name
              td=data.name
            tr 
              td Serial Number
              td=data.serialNumber
            tr 
              td Unique ID
              td=data.uniqueId
            tr 
              td Make
              td=data.make
            tr 
              td Model
              td=data.model
            tr 
              td Purchase Date
              td=data.purchaseDate.toLocaleString()
            tr 
              td Value
              td=data.value
            tr 
              td Branch
              td=data.branch
            tr 
              td Category
              td=data.category.name
            tr 
              td Employee
              td=data.employee.name
      form.asset-form.small.mx-auto.mb-auto(action=`/assets/assign/return/${data && data.id}` method="POST").col-lg-6
        .mb-3.col-lg-6
          label(for="reason" class="form-label") Reason for returning the asset
          input#reason(type="text" name="reason" class=`form-control ${(error) ? 'is-invalid' : ''}` value=(data && data.reason) || "" required)
          if error
            .small.text-danger=error
          
        button(type="submit" class="btn btn-primary") Return Asset