doctype html 
html 
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    script(async, defer, src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js")
    script(async, defer, src="/js/main.js")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")
    link(rel="stylesheet", href="/css/style.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css")
    script(src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js")
    title Asset Management System
    body
      .row.w-100.h-lg-100.mx-auto(style='background:#fff;min-height:100svh') 
        .col-lg-5.login-section.order-lg-last.d-flex.flex-column.justify-content-center.align-items-center.gap-4
          .h3.login-heading Asset Management System
          form#login-form(action="/register", method="post") 
            .h5.text-center.text-uppercase.fw-normal Register
            .input
              label(for="username").icon.fa.fa-user 
              input#username(type="text" autocomplete="off" value=(data && data.username) ? data.username : "" placeholder="Username" name="username" class=`form-control ${(error) && 'is-invalid' }` required)
            .input
              label(for="email").icon.fa.fa-envelope 
              input#email(type="email" autocomplete="off" value=(data && data.email) ? data.email : "" placeholder="Email" name="email" class=`form-control ${(error) && 'is-invalid' }` required)
            .input
              label(for="password").icon.fa.fa-lock 
              input#password(type="password" autocomplete="new-password" value=(data && data.password) ? data.password : "" placeholder="Password" name="password" class=`form-control ${(error) && 'is-invalid' }` required)
            if error
              .small.text-danger.text-center=error
              
            button(type="submit") Register
              .fa.fa-user.ms-2
            a(href="/login").small.text-center.text-decoration-none.text-dark Login
            


        
        .col-lg-7.d-flex.justify-content-center.align-items-center
          img(src="/home-bg.webp", alt="home bg", style='width:75%;transform: scaleX(-1)')


    script.
      const notification = !{JSON.stringify(process)};
      var notyf = new Notyf();
      if(notification && notification.type === 'success') notyf.success(notification.message || "Success");
      if(notification && notification.type === 'fail') notyf.error(notification.message || "Error");
        
        